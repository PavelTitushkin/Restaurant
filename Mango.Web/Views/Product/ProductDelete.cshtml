@model Mango.Web.Models.ProductDto

<form asp-action="ProductDelete">
    <input asp-for="ProductId" type="hidden" />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete product</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled/>
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Price" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}